<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('extra/meta-data') %>
        <link rel="stylesheet" href="/style/main.css">
        <link rel="stylesheet" href="/style/post.css">
        <link rel="stylesheet" href="/style/footer.css">
        <script src="/scripts/file-priview.js" defer></script>
        <title>Post</title>
</head>

<body>

    <%- include('extra/main-pane') %>

        <h1>Make it easy.</h1>


        <div id="inser-form">

            <div id="form-head">
                <h4>YOUR NEW POST</h4>
                <img src="/image/6076f540d539fa8c97126f0b_straigtaway.svg" alt="image">
                <h2>Create.Publish.View.</h2>
            </div>

            <% for (key of user) { %>

            <div id="form">

                <form action="/user/create-post/<%= key.userId %>" method="POST" enctype="multipart/form-data">

                    <label for="post-title">
                        <h3>Post Title</h3>
                    </label>
                    <input type="text" name="titlepost" id="post-title" required>

                    <label for="picUpload">
                        <h3>Upload Picture</h3>
                    </label>
                    <input type="file" name="image" id="picUpload" required accept=".png,.jpeg,.jpg">

                    <img src="" alt="pickedImage" id="pickedImage">

                    <label for="hashTags">
                        <h3>Tags</h3>
                    </label>
                    <textarea name="hashTags" rows="4" id="hashTags" placeholder="use , to separate tags"></textarea>

                    <label for="post-content">
                        <h3>Post content</h3>
                    </label>
                    <textarea name="postcontent" rows="7" id="post-content" required></textarea>

                    <button type="submit">
                        <h3>Submit your Post</h3>
                    </button>

                </form>
            </div>

            <% } %>

        </div>

        <%- include('extra/footer') %>

</body>

</html>

